<%- include ('partials/header.ejs'); %>

<div class="container">
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input type="text" placeholder="name" name="campground[name]">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input type="text" placeholder="URL" name="campground[image]">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" rows="3" name="campground[description]"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

