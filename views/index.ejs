<%- include ('partials/header.ejs'); %>

<div class="container">
    <div class="row">
        <% campgrounds.forEach((campground) => { %>
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="<%= campground.image %>" />
                <div class="caption">
                    <h3><%= campground.name %></h3>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" role="button">More Info</a>
                    </p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<%- include ('partials/footer.ejs'); %>